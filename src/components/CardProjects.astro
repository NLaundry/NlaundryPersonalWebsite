---
// we're assuming that the project get's passed in
import type { CollectionEntry } from "astro:content";
import Icon from "astro-icon";

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<div
    class="flex bg-background_card_colour hover:bg-background_card_hover_colour backdrop-blur-lg shadow-lg hover:shadow-2xl rounded-lg hover:rounded-2xl overflow-hidden transition-all"
>
    <!-- this is where I'll put the logo -->
    <img
        src="https://via.placeholder.com/150"
        alt="Project Image"
        class="w-1/3 h-auto object-cover"
    />
    <div class="w-2/3 p-4 flex flex-col justify-between">
        <div>
            <h1 class="text-2xl font-bold">{project.data.title}</h1>
            <p class="text-md mt-2">{project.data.tags}</p>
        </div>
        <div class="mt-4 flex gap-2">
            <a
                href="{project.data.github}"
                class="text-primary_colour hover:text-primary_active_colour"
            >
                <Icon name="mdi:github" class="w-20 h-20 r-0" />
            </a>
            <!-- Add more icons here with similar structure -->
        </div>
    </div>
</div>
