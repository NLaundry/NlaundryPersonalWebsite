---
const blog = {
  title: 'Card Title',
  description: 'Card content',
  imageUrl: 'https://via.placeholder.com/150',
  tags: ['Tag 1', 'Tag 2', 'Tag 3']
};
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <!-- Card Image -->
  <img src={blog.imageUrl} alt="card image" class="w-full h-56 object-cover" />

  <!-- Card Content -->
  <div class="p-4">
    <!-- Card Title -->
    <h3 class="font-semibold text-lg mb-2">{blog.title}</h3>

    <!-- Card Description -->
    <p class="text-gray-600 mb-4">{blog.description}</p>

    <!-- Card Tags -->
    <div class="flex flex-wrap">
      {blog.tags.map(tag => (
        <span class="bg-blue-200 text-blue-800 py-1 px-2 rounded-full text-sm mr-2 mb-2">{tag}</span>
      ))}
    </div>
  </div>
</div>

